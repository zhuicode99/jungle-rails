<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%=humanized_money_with_symbol product.price %>
  </td>
  <td>
    <%=order.quantity %>
  </td>
  <td>
    <%=humanized_money_with_symbol order.total_price_cents/100.to_f %>
  </td>
</tr>